{% if resource_granted('orocrm_case_view') %}
    {% import 'OroUIBundle::macros.html.twig' as UI %}
    {% import 'OroEmailBundle::macros.html.twig' as email %}

    {% macro render_zendesk_user(label, user) %}
        {% import 'OroUIBundle::macros.html.twig' as UI %}
        {%- set userHtml -%}
            {%- if user -%}
                {% if user.relatedUser and resource_granted('VIEW', user.relatedUser) %}
                    <a href="{{ path('oro_user_view', {'id': user.relatedUser.id}) }}">
                        {{ user.name|escape }}
                    </a>
                {% elseif user.relatedContact and resource_granted('VIEW', user.relatedContact) %}
                    <a href="{{ path('orocrm_contact_view', {'id': user.relatedContact.id}) }}">
                        {{ user.name|escape }}
                    </a>
                {% else %}
                    {{ user.name|escape }}
                {% endif %}
            {%- endif -%}
        {%- endset -%}

        {% if label %}
            {{ UI.renderHtmlProperty(label, userHtml) }}
        {% else %}
            {{ userHtml }}
        {% endif %}
    {% endmacro %}

    {% set ticket = orocrm_zendesk_ticket_by_related_case(entity) %}
    {% if ticket %}
        <div class="responsive-cell">
            <div class="box-type1">
                <div class="title">
                    <span class="widget-title">{{ "orocrm.zendesk.ticket_info_title"|trans }}</span>
                </div>
                <div class="row-fluid form-horizontal">
                    <div class="responsive-block">

                        {% set link %}
                            {% set url = orocrm_zendesk_ticket_url(ticket) %}
                            {% if url %}
                                <a href="{{ url }}" target="_blank" class="no-hash">{{ ticket.originId }}</a>
                            {% elseif ticket.originId %}
                                {{ ticket.originId }}
                            {% else %}
                                {{ 'oro.ui.empty'|trans }}
                            {% endif %}
                        {% endset %}
                        {{ UI.renderHtmlProperty('orocrm.zendesk.ticket.origin_id.label'|trans, link) }}

                        {% set recipient %}
                            {{ email.email_address_simple(ticket.recipient) }}
                        {% endset %}
                        {{ UI.renderHtmlProperty('orocrm.zendesk.ticket.recipient.label'|trans, recipient|trim) }}
                        {{ UI.renderProperty('orocrm.zendesk.ticket.status.label'|trans, ticket.status.label|default(false)) }}
                        {{ UI.renderProperty('orocrm.zendesk.ticket.type.label'|trans, ticket.type.label|default(false)) }}
                        {{ _self.render_zendesk_user('orocrm.zendesk.ticket.submitter.label'|trans, ticket.submitter) }}
                        {{ _self.render_zendesk_user('orocrm.zendesk.ticket.assignee.label'|trans, ticket.assignee) }}
                        {{ _self.render_zendesk_user('orocrm.zendesk.ticket.requester.label'|trans, ticket.requester) }}
                        {{ UI.renderProperty('orocrm.zendesk.ticket.priority.label'|trans, ticket.priority.label|default(false)) }}
                        {% set problem %}
                            {% if ticket.problem and ticket.problem.relatedCase %}
                                <a href="{{ path('orocrm_case_view', {'id': ticket.problem.relatedCase.id}) }}">
                                    {{ ticket.problem.subject }}
                                </a>
                            {% endif %}
                        {% endset %}
                        {{ UI.renderHtmlProperty('orocrm.zendesk.ticket.problem.label'|trans, problem|trim) }}

                        {% set collaborators %}
                            {% if ticket.collaborators %}
                                {% for collaborator in ticket.collaborators %}
                                    {{ _self.render_zendesk_user(false, collaborator) }}
                                    {% if loop.length > 1 and not loop.last %}
                                        ,&nbsp;
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        {% endset %}
                        {{ UI.renderHtmlProperty('orocrm.zendesk.ticket.collaborators.label'|trans, collaborators|trim) }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endif %}
